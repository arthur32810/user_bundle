{% trans_default_domain 'ArtdeveloppUserBundle' %}

{% if error %}
<div class="alert alert-danger container" role="alert">
    <i class="fas fa-exclamation-circle"></i> {{error.messageKey|trans(error.messageData, 'security')}}
</div>
{% endif %}

{% include "@ArtdeveloppUser/messageTemplate/flashBag.html.twig" %}


<form action="{{path('artdevelopp_user.login') }}" method="post" class="container">
    <div class="form-group">
        {% if userIdentifier == 'email' %}
        <label for="username">Email : </label>
        {% elseif userIdentifier == 'username' %}
        <label for="username">Nom d'utilisateur : </label>
        {% endif %}

        <input type="text" name="_username" id="username" class="form-control" value="{{last_username}}" />
    </div>

    <div class="form-group">
        <label for="password">Mot de passe : </label>
        <input type="password" name="_password" class="form-control" id="password" />
    </div>

    <input type="hidden" name="_csrf_token" value="{{csrf_token('authenticate')}}">

    <button type="submit" class="btn btn-primary"> Connexion </button>
</form>